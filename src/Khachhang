    private final String url = "jdbc:sqlserver://localhost:1433;databaseName=BTLoop;encrypt=false;";
    private final String user = "sa";
    private final String password = "123";
    public Khachhang() {
        initComponents();
        loadDataToTable();
        jTextField1.setText(generateNewMaKH());
        jTextField1.setEditable(false);

        jTable1.addMouseListener(new java.awt.event.MouseAdapter() {
            @Override
            public void mousePressed(java.awt.event.MouseEvent evt) {
                if (evt.isPopupTrigger()) showPopup(evt);
            }

            @Override
            public void mouseReleased(java.awt.event.MouseEvent evt) {
                if (evt.isPopupTrigger()) showPopup(evt);
            }
        });
    }
    private void addCustomer() {
        String tenKH = jTextField2.getText().trim();
        String sdt = jTextField3.getText().trim();
        String diaChi = jTextField4.getText().trim();
        String loaiKH = jRadioButton1.isSelected() ? "Thường" : (jRadioButton2.isSelected() ? "VIP" : "");

        if (tenKH.isEmpty() || sdt.isEmpty() || diaChi.isEmpty() || loaiKH.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Vui lòng nhập đầy đủ thông tin!");
            return;
        }

        String maKH = jTextField1.getText();

        try (Connection conn = DriverManager.getConnection(url, user, password)) {
            String sql = "INSERT INTO KhachHang (TenKH, SDT, DiaChi, LoaiKH) VALUES (?, ?, ?, ?)";
            PreparedStatement ps = conn.prepareStatement(sql);
            ps.setString(1, tenKH);
            ps.setString(2, sdt);
            ps.setString(3, diaChi);
            ps.setString(4, loaiKH);
            ps.executeUpdate();

            DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
            model.addRow(new Object[]{maKH, tenKH, sdt, diaChi, loaiKH});

            JOptionPane.showMessageDialog(this, "Thêm khách hàng thành công!");
            jTextField2.setText("");
            jTextField3.setText("");
            jTextField4.setText("");
            buttonGroup1.clearSelection();

            jTextField1.setText(generateNewMaKH());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Lỗi thêm khách hàng: " + e.getMessage());
        }
    }

    private void loadDataToTable() {
        try (Connection conn = DriverManager.getConnection(url, user, password)) {
            String sql = "SELECT * FROM KhachHang";
            PreparedStatement ps = conn.prepareStatement(sql);
            ResultSet rs = ps.executeQuery();

            DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
            model.setRowCount(0);

            while (rs.next()) {
                String maKH = rs.getString("MaKH");
                String tenKH = rs.getString("TenKH");
                String sdt = rs.getString("SDT");
                String diaChi = rs.getString("DiaChi");
                String loaiKH = rs.getString("LoaiKH");

                model.addRow(new Object[]{maKH, tenKH, sdt, diaChi, loaiKH});
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Lỗi tải dữ liệu: " + e.getMessage());
        }
    }

    private String generateNewMaKH() {
        int nextId = 1;
        try (Connection conn = DriverManager.getConnection(url, user, password)) {
            String sql = "SELECT MAX(MaKH) AS maxMaKH FROM KhachHang";
            PreparedStatement ps = conn.prepareStatement(sql);
            ResultSet rs = ps.executeQuery();
            if (rs.next()) {
                String maxMaKH = rs.getString("maxMaKH");
                if (maxMaKH != null && maxMaKH.startsWith("KH")) {
                    nextId = Integer.parseInt(maxMaKH.substring(2)) + 1;
                }
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Lỗi sinh mã KH: " + e.getMessage());
        }
        return "KH" + String.format("%04d", nextId);
    }

    private void deleteSelectedCustomer() {
        int selectedRow = jTable1.getSelectedRow();
        if (selectedRow == -1) return;

        int confirm = JOptionPane.showConfirmDialog(this,
                "Bạn có chắc chắn muốn xóa khách hàng này?",
                "Xác nhận xóa",
                JOptionPane.YES_NO_OPTION);

        if (confirm != JOptionPane.YES_OPTION) return;

        String maKH = jTable1.getValueAt(selectedRow, 0).toString();

        try (Connection conn = DriverManager.getConnection(url, user, password)) {
            String sql = "DELETE FROM KhachHang WHERE MaKH = ?";
            PreparedStatement ps = conn.prepareStatement(sql);
            ps.setString(1, maKH);
            int rows = ps.executeUpdate();
            if (rows > 0) {
                ((DefaultTableModel) jTable1.getModel()).removeRow(selectedRow);
                JOptionPane.showMessageDialog(this, "Xóa khách hàng thành công!");
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Lỗi xóa khách hàng: " + e.getMessage());
        }
    }

    private void showPopup(java.awt.event.MouseEvent evt) {
        int row = jTable1.rowAtPoint(evt.getPoint());
        if (row >= 0) {
            jTable1.setRowSelectionInterval(row, row);
            javax.swing.JPopupMenu popup = new javax.swing.JPopupMenu();
            javax.swing.JMenuItem deleteItem = new javax.swing.JMenuItem("Xóa khách hàng");
            deleteItem.addActionListener(e -> deleteSelectedCustomer());
            popup.add(deleteItem);
            popup.show(evt.getComponent(), evt.getX(), evt.getY());
        }
    }
