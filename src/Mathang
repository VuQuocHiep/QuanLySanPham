    private void addProduct() {
        String tenSP = jTextField1.getText().trim();
        String loaiSP = jComboBox1.getSelectedItem().toString();
        String giaBanStr = jTextField2.getText().trim();

        if (tenSP.isEmpty() || giaBanStr.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Vui lòng nhập đầy đủ thông tin!");
            return;
        }

        try {
            double giaBan = Double.parseDouble(giaBanStr);

            try (Connection conn = DriverManager.getConnection(url, user, password)) {
                String sql = "INSERT INTO MatHang (TenSP, LoaiSP, GiaBan) VALUES (?, ?, ?)";
                PreparedStatement ps = conn.prepareStatement(sql, Statement.RETURN_GENERATED_KEYS);
                ps.setString(1, tenSP);
                ps.setString(2, loaiSP);
                ps.setDouble(3, giaBan);
                ps.executeUpdate();
                ResultSet rs = ps.getGeneratedKeys();
                int id = 0;
                if (rs.next()) {
                    id = rs.getInt(1);
                }
                String maSP = "SP" + String.format("%04d", id);
                jTextField3.setText(maSP);
                DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
                model.addRow(new Object[]{maSP, tenSP, loaiSP, giaBan});
                jTextField1.setText("");
                jTextField2.setText("");
                JOptionPane.showMessageDialog(this, "Thêm sản phẩm thành công!");
            }
            } catch (NumberFormatException e) {
                JOptionPane.showMessageDialog(this, "Giá bán phải là số hợp lệ!");
            } catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Lỗi: " + e.getMessage());
        }
                jTextField3.setText(generateNewMaSP());
    }
    private void loadDataToTable() {
        try (Connection conn = DriverManager.getConnection(url, user, password)) {
            String sql = "SELECT * FROM MatHang";
            PreparedStatement ps = conn.prepareStatement(sql);
            ResultSet rs = ps.executeQuery();

            DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
            model.setRowCount(0);

            while (rs.next()) {
                String maSP = rs.getString("MaSP");
                String tenSP = rs.getString("TenSP");
                String loaiSP = rs.getString("LoaiSP");
                double giaBan = rs.getDouble("GiaBan");

                model.addRow(new Object[]{maSP, tenSP, loaiSP, giaBan});
            }

        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Lỗi load dữ liệu: " + e.getMessage());
        }
    }
