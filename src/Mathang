    private String generateNewMaSP() {
    int nextId = 1;
    try (Connection conn = DriverManager.getConnection(url, user, password)) {
        String sql = "SELECT MAX(MaSP) AS maxMaSP FROM MatHang";
        PreparedStatement ps = conn.prepareStatement(sql);
        ResultSet rs = ps.executeQuery();
        if (rs.next()) {
            String maxMaSP = rs.getString("maxMaSP");
            if (maxMaSP != null && maxMaSP.startsWith("SP")) {
                nextId = Integer.parseInt(maxMaSP.substring(2)) + 1;
            }
        }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Lỗi lấy mã SP: " + e.getMessage());
        }
        return "SP" + String.format("%04d", nextId);
    }
    private void deleteSelectedProduct() {
        int selectedRow = jTable1.getSelectedRow();
        if (selectedRow == -1) return;

        int confirm = JOptionPane.showConfirmDialog(this,
                "Bạn có chắc chắn muốn xóa sản phẩm này?",
                "Xác nhận xóa",
                JOptionPane.YES_NO_OPTION);

        if (confirm != JOptionPane.YES_OPTION) return;

        String maSP = jTable1.getValueAt(selectedRow, 0).toString();

        try (Connection conn = DriverManager.getConnection(url, user, password)) {
            String sql = "DELETE FROM MatHang WHERE MaSP = ?";
            PreparedStatement ps = conn.prepareStatement(sql);
            ps.setString(1, maSP);
            int rows = ps.executeUpdate();
            if (rows > 0) {
                DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
                model.removeRow(selectedRow);
                JOptionPane.showMessageDialog(this, "Xóa sản phẩm thành công!");
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Lỗi xóa sản phẩm: " + e.getMessage());
        }
    }

    private void showPopup(java.awt.event.MouseEvent evt) {
    int row = jTable1.rowAtPoint(evt.getPoint());
    if (row >= 0) {
        jTable1.setRowSelectionInterval(row, row); // chọn dòng được nhấn
        javax.swing.JPopupMenu popup = new javax.swing.JPopupMenu();
        javax.swing.JMenuItem deleteItem = new javax.swing.JMenuItem("Xóa sản phẩm");
        deleteItem.addActionListener(e -> deleteSelectedProduct());
        popup.add(deleteItem);
        popup.show(evt.getComponent(), evt.getX(), evt.getY());
    }
}
