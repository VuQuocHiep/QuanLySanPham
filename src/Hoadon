    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        timKiemHoadon();
    }                                        
    private void timKiemHoadon() {
        String maKH = jTextField1.getText().trim();
        if (maKH.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Vui lòng nhập mã khách hàng!");
            return;
        }

        DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
        model.setRowCount(0);
        double tongTien = 0;

        try (Connection conn = DriverManager.getConnection(
                "jdbc:sqlserver://localhost:1433;databaseName=BTLoop;encrypt=false;", "sa", "123")) {

            String sql = """
                SELECT 
                    KH.MaKH, KH.TenKH, MH.MaSP, MH.LoaiSP, MH.TenSP, MH.GiaBan, DSMH.SoLuong
                FROM DanhSachMuaHang DSMH
                JOIN KhachHang KH ON DSMH.KhachHangID = KH.ID
                JOIN MatHang MH ON DSMH.MatHangID = MH.ID
                WHERE KH.MaKH = ?
            """;

            PreparedStatement ps = conn.prepareStatement(sql);
            ps.setString(1, maKH);
            ResultSet rs = ps.executeQuery();

            while (rs.next()) {
                Object[] row = {
                    rs.getString("MaKH"),
                    rs.getString("TenKH"),
                    rs.getString("MaSP"),
                    rs.getString("LoaiSP"),
                    rs.getString("TenSP"),
                    rs.getDouble("GiaBan"),
                    rs.getInt("SoLuong")
                };
                model.addRow(row);
                tongTien += rs.getDouble("GiaBan") * rs.getInt("SoLuong");
            }

            jLabel4.setText(String.format("%.0f", tongTien));

        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(this, "Lỗi kết nối SQL: " + ex.getMessage());
        }
    }

